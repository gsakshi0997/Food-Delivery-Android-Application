<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_bev"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bgmenu2"
    tools:context="com.sakshigupta.fooddelivery.menu_bev">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Beverages"
        android:textColor="#000000"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/ch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv1"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="47dp"
        android:text="Iced Tea" />

    <CheckBox
        android:id="@+id/ch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ch1"
        android:layout_alignStart="@+id/ch1"
        android:layout_below="@+id/ch1"
        android:layout_marginTop="20dp"
        android:text="Pepsi" />

    <CheckBox
        android:id="@+id/ch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ch2"
        android:layout_alignRight="@+id/ch2"
        android:layout_below="@+id/ch2"
        android:layout_marginTop="22dp"
        android:text="Fanta" />

    <CheckBox
        android:id="@+id/ch4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ch3"
        android:layout_alignStart="@+id/ch3"
        android:layout_below="@+id/ch3"
        android:layout_marginTop="25dp"
        android:text="Vanilla Milkshake" />

    <CheckBox
        android:id="@+id/ch5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ch4"
        android:layout_alignStart="@+id/ch4"
        android:layout_below="@+id/ch4"
        android:layout_marginTop="24dp"
        android:text="Chocolate Milkshake" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ch5"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ch5"
        android:background="#ffffff"
        android:layout_marginBottom="98dp"
        android:text="Add to cart" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn1"
        android:layout_toEndOf="@+id/ch5"
        android:background="#ffffff"
        android:layout_toRightOf="@+id/ch5"
        android:text="Skip" />

    <TextView
        android:text="Rs. 120"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignBaseline="@+id/ch5"
        android:layout_alignBottom="@+id/ch5"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:text="Rs. 100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/ch1"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2" />

    <TextView
        android:text="Rs. 60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="#000000"
        android:layout_above="@+id/ch3"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="Rs. 120"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/ch4"
        android:layout_alignBottom="@+id/ch4"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:text="Rs. 60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/ch3"
        android:layout_alignBottom="@+id/ch3"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

</RelativeLayout>
